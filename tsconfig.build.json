{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "scripts/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}